#.  snapls - AWS CLI -- a listing of snaps
snapls () {

  myACCNTID=$(aws iam get-user | grep Arn | cut -d':' -f2- | tr -d '"' | cut -d':' -f5);

    aws ec2 describe-snapshots --owner ${myACCNTID} \
       --query 'Snapshots[*].{ID:SnapshotId,Time:StartTime}'
}

